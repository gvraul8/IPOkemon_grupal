        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Realizada por: Raúl González, Pablo Porrero y Joaquín " Grid.Row="3" Width="1198" Foreground="Black" FontWeight="Bold" FontSize="30" TextAlignment="Center" Height="56" VerticalAlignment="Top" Margin="0,20,0,0"/>

